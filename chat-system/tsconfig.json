{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@auth/*": ["services/auth/src/*"],
      "@users/*": ["services/users/src/*"],
      "@chat/*": ["services/chat/src/*"],
      "@middlewares/*": ["infra/middlewares/*"],
      "@infra/*": ["infra/*"],
      "@services/*": ["services/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "services/**/*",
    "gateway/src/**/*",
    "infra/**/*",
    "@types/**/*"
  ],
  "exclude": ["node_modules"]
}