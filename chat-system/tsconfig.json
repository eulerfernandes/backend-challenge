{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@auth/*": ["services/auth/src/*"],
      "@users/*": ["services/users/src/*"],
      "@chat/*": ["services/chat/src/*"]
    }
  },
  "include": ["services/**/src", "gateway/src"],
  "exclude": ["node_modules"]
}
